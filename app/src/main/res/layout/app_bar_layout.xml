<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/rlt_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="1.5"
            android:visibility="visible">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:alpha="1.5"
                    android:layout_marginTop="10.1dp"
                    android:textColor="@color/black_again"
                    android:lines="1"
                    android:letterSpacing=".065"
                    android:maxLines="1"
                    android:layout_marginLeft="13.4dp"
                    android:singleLine="true"
                    android:text="Home"
                    android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
                android:id="@+id/btn_back_left"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="17dp"
                android:orientation="horizontal"
                android:visibility="visible">

            <ImageView
                    android:id="@+id/btn_orders"
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/transparent"
                    android:stateListAnimator="@null"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_box" />

            <ImageView
                    android:id="@+id/btn_notice"
                    android:layout_width="23dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/transparent"
                    android:stateListAnimator="@null"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_bell" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/ll_back_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:alpha="1.5"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:visibility="gone">
        <ImageButton
                android:id="@+id/img_header_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11.5dp"
                android:layout_marginTop="13dp"
                android:background="@android:color/transparent"
                android:src="@drawable/img_arrow_left" />
        <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:id="@+id/tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:alpha="1.5"
                android:textColor="@color/black_again"
                android:lines="1"
                android:letterSpacing=".065"
                android:maxLines="1"

                android:singleLine="true"
                android:textSize="23sp" />
    </RelativeLayout>


</RelativeLayout>